{
  "version": 2,
  "builds": [
    {
      "src": "family-gift-backend/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "family-gift-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "family-gift-backend/server.js"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg))",
      "dest": "family-gift-frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "family-gift-frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}